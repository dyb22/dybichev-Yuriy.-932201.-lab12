@{
    ViewData["Title"] = "ModelBindingInParameters";
    bool isResultDisplayed = !string.IsNullOrEmpty(ViewBag.Result); // Проверка наличия результата
}
<div class="UMcount">
<main class="mainmodel">
        @if (!isResultDisplayed)
        {
            <h1>ModelBindingInParameters</h1>

            <form asp-action="ModelBindingParameters" method="post">
                <div class="form-group">

                    @Html.TextBox("Number1", @ViewData["Result"] ?? "", new { @class = "form-control"})
                </div>



                <div class="form-groupoper">

                    <select name="Operation" class="form-controll">
                        <option value="+" selected="@(ViewBag.Operation == "+")">+</option>
                        <option value="-" selected="@(ViewBag.Operation == "-")">-</option>
                        <option value="*" selected="@(ViewBag.Operation == "*")">*</option>
                        <option value="/" selected="@(ViewBag.Operation == "/")">/</option>

                    </select>
                </div>

                <div class="form-group">

                    @Html.TextBox("Number2", @ViewData["Result"] ?? "", new { @class = "form-control"})
                </div>

                <button type="submit" class="btn btn-primary mt-3">Submit</button>
            </form>
        }
        
else{
            <div class = "result">
                <h1>Result</h1>
                @ViewBag.Result
            </div>
}
</main>
</div>